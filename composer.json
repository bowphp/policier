{
    "name": "bowphp/policier",
    "description": "The Simple Auth System via JWT",
    "type": "library",
    "keywords": ["JWT", "Json Web Token", "Policier", "Franck DAKIA", "Policier PHP", "PHP JWT", "FranckDakia", "Papac"],
    "license": "MIT",
    "authors": [
        {
            "name": "Franck DAKIA",
            "email": "dakiafranck@gmail.com"
        }
    ],
    "require": {
        "lcobucci/jwt": "v3.2.5"
    },
    "autoload": {
        "psr-4": {
            "Policier\\": "src/"
        },
        "files": [
            "config/helper.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Policier\\Laravel\\PolicierServiceProvider"
            ],
            "aliases": {
                "Policier": "Policier\\Laravel\\Policier"
            }
        }
    },
    "scripts": {
        "phpcbf": "phpcbf --standard=psr12 --severity=4 --tab-width=4 src tests",
        "phpcs": "phpcs --standard=psr12 --severity=4 --tab-width=4 src",
        "test": "phpunit --configuration phpunit.dist.xml"
    }
}
